@model csharp_PropertyRental.Models.LandlordViewModel

@{
    ViewData["Title"] = "Edit Landlord";
}

<h2>Edit Landlord</h2>

<form asp-action="EditLandlord" method="post">
    <input type="hidden" asp-for="LandlordId" />

    <div class="mb-3">
        <label asp-for="LandlordFirstName" class="form-label">First Name</label>
        <input asp-for="LandlordFirstName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="LandlordLastName" class="form-label">Last Name</label>
        <input asp-for="LandlordLastName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Phone</label>
        <input asp-for="Phone" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a href="@Url.Action("Index", "LandlordView")" class="btn btn-secondary">Cancel</a>
</form>
